<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="261dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:text="@string/text_message"
            android:ems="10"
            android:id="@+id/edit_message" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_send" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>
    <Button
            android:text="@string/push_message"
            android:layout_width="87dp"
            android:layout_height="49dp"
            android:id="@+id/button_send" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintStart_toEndOf="@+id/edit_message" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:onClick="sendMessage" app:layout_constraintBaseline_toBaselineOf="@+id/edit_message"/>
</androidx.constraintlayout.widget.ConstraintLayout>